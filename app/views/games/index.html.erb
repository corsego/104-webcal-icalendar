<p style="color: green"><%= notice %></p>

<h1>Games
  <%= link_to 'Subscribe to calendar', games_url(protocol: :webcal, format: :ics) %>
</h1>

<div id="games">
  <% @games.each do |game| %>
    <%= render game %>
    <p>
      <%= link_to "Show this game", game %>
    </p>
  <% end %>
</div>

<%= link_to "New game", new_game_path %>
